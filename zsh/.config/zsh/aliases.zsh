#!/usr/bin/env zsh

# ls aliases
alias ls='ls --color=auto'
alias la='ls -alh'
alias ll='ls -l'

# Git aliases
alias gcomm='git commit'
alias gadd='git add'
alias gstat='git status --short'

# cp (-v -> show what has been copied, -i -> ask to overwrite)
alias cp='cp -vi'

# cls
alias cls='clear'

# Other programs 
alias rng='ranger'
alias tmatt='tmux attach'
